# Development Docker image with hot reload capabilities
# Follows same security practices as production but optimized for development

FROM golang:1.24-alpine

# Install development dependencies (includes production deps + dev tools)
RUN apk add --no-cache \
    git \
    gcc \
    musl-dev \
    ca-certificates \
    tzdata \
    curl \
    nodejs \
    npm \
    && update-ca-certificates

# Install Air for hot reload (development-specific)
RUN go install github.com/air-verse/air@latest

# Create non-root user
RUN addgroup -g 1001 -S mcpuser && \
    adduser -u 1001 -S mcpuser -G mcpuser

# Set working directory
WORKDIR /app

# Create required directories with proper ownership (same as production)
RUN mkdir -p /app/data /app/config /app/logs /app/backups /app/audit_logs /app/docs /app/tmp && \
    chown -R mcpuser:mcpuser /app

# Create Go module cache directory with proper permissions (dev-specific)
RUN mkdir -p /go/pkg/mod && \
    chown -R mcpuser:mcpuser /go

# Copy development configuration files
COPY --chown=mcpuser:mcpuser configs/dev/ /app/config/
COPY --chown=mcpuser:mcpuser .air.toml /app/
COPY --chown=mcpuser:mcpuser mcp-proxy.js /app/

# Copy documentation for get_documentation tool (same as production)
COPY --chown=mcpuser:mcpuser docs/ /app/docs/

# Switch to non-root user
USER mcpuser

# Expose ports (MCP server, development metrics)
EXPOSE 9080 8081 8082 9090

# Set consistent environment variables (aligned with production)
ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    MCP_MEMORY_DATA_DIR=/app/data \
    MCP_MEMORY_CONFIG_DIR=/app/config \
    MCP_MEMORY_LOG_DIR=/app/logs \
    MCP_MEMORY_BACKUP_DIR=/app/backups \
    MCP_MEMORY_HTTP_PORT=9080 \
    MCP_MEMORY_HEALTH_PORT=8081 \
    MCP_MEMORY_METRICS_PORT=8082 \
    MCP_MEMORY_LOG_LEVEL=debug \
    CONFIG_PATH=/app/config/config.yaml

# Set labels following OCI standards (same as production)
LABEL \
    org.opencontainers.image.title="Claude Vector Memory MCP Server (Development)" \
    org.opencontainers.image.description="Development version with hot reload for MCP memory server" \
    org.opencontainers.image.version="1.0.0-dev" \
    org.opencontainers.image.vendor="fredcamaral" \
    org.opencontainers.image.licenses="MIT" \
    org.opencontainers.image.source="https://github.com/fredcamaral/mcp-memory" \
    org.opencontainers.image.documentation="https://github.com/fredcamaral/mcp-memory/blob/main/README.md"

# Command to run Air for development hot reload
CMD ["air", "-c", ".air.toml"]
