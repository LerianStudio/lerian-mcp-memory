# Environment Configuration Template for MCP Memory Web UI
# Copy this file to .env.local and configure for your environment

# ============================================
# REQUIRED: API Configuration
# ============================================

# API URLs - Update these based on your deployment
# For local development:
NEXT_PUBLIC_API_URL=http://localhost:9080
NEXT_PUBLIC_GRAPHQL_URL=/api/graphql
NEXT_PUBLIC_WS_URL=ws://localhost:9080/ws

# Backend GraphQL server endpoint (used by Next.js API route)
GRAPHQL_ENDPOINT=http://localhost:8082/graphql

# For production (example):
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# NEXT_PUBLIC_GRAPHQL_URL=/api/graphql
# NEXT_PUBLIC_WS_URL=wss://api.your-domain.com/ws
# GRAPHQL_ENDPOINT=http://backend:8082/graphql

# ============================================
# REQUIRED: Environment Configuration
# ============================================

# Environment mode (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# Node environment (development, test, production)
NODE_ENV=development

# Logging level (debug, info, warn, error)
NEXT_PUBLIC_LOG_LEVEL=info

# ============================================
# OPTIONAL: Feature Flags
# ============================================

# Enable mock data for development (true/false)
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# Enable WebSocket connections (true/false)
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Enable GraphQL subscriptions (true/false)
NEXT_PUBLIC_ENABLE_GRAPHQL_SUBSCRIPTIONS=false

# Enable rate limiting (true/false)
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true

# ============================================
# OPTIONAL: Monitoring & Observability
# ============================================

# External logging service endpoint
# NEXT_PUBLIC_LOGGING_ENDPOINT=https://logs.your-service.com/api/logs

# Metrics collection endpoint
# NEXT_PUBLIC_METRICS_ENDPOINT=https://metrics.your-service.com/api/metrics

# ============================================
# OPTIONAL: Internal URLs (Server-side only)
# ============================================

# Internal API URL for server-side requests (if different from public)
# INTERNAL_API_URL=http://lerian-mcp-memory:9080

# ============================================
# OPTIONAL: Application Metadata
# ============================================

# Application name and version
# NEXT_PUBLIC_APP_NAME=MCP Memory
# NEXT_PUBLIC_APP_VERSION=1.0.0

# Default repository for memory operations
NEXT_PUBLIC_DEFAULT_REPOSITORY=github.com/lerianstudio/lerian-mcp-memory

# GitHub repository URLs
NEXT_PUBLIC_GITHUB_REPO_URL=https://github.com/lerianstudio/lerian-mcp-memory
NEXT_PUBLIC_GITHUB_ISSUES_URL=https://github.com/lerianstudio/lerian-mcp-memory/issues
