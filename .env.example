# Claude Memory MCP Server Configuration

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Server Configuration
MCP_MEMORY_PORT=8080
MCP_MEMORY_HOST=localhost

# Chroma Vector Database Configuration
CHROMA_ENDPOINT=http://localhost:8000
CHROMA_COLLECTION=claude_memory
CHROMA_CONTAINER_NAME=claude-memory-chroma
CHROMA_VOLUME_PATH=./data/chroma

# Storage Configuration
RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=

# Optional: Advanced Configuration
# CHUNKING_STRATEGY=smart
# MIN_CONTENT_LENGTH=50
# MAX_CONTENT_LENGTH=10000
# SIMILARITY_THRESHOLD=0.8